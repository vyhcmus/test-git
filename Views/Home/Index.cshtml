@model IEnumerable<ProjectLab04.Models.EmployeesModel>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Msg</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <b>Tìm Kiếm: </b> <text>Tên Nhân Viên</text> @Html.TextBox("EmpNameSearch")    <text>Email Nhân Viên</text> @Html.TextBox("EmpEmailSearch")
    <input type="submit" name="submit2"  value="Tìm"/>
}

<table class="table table-responsive table-bordered">
  <thead style="background-color:Highlight">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeName)
        </th>
        <th>
